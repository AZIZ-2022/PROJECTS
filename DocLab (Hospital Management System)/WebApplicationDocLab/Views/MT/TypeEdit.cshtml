@model WebApplicationDocLab.Models.Doctor_Type

@{
    ViewBag.Title = "Edit Doctor Type";
    Layout = "~/Views/_LayoutPageAdminIndex.cshtml";
}
<link href="~/Page/css/Type_Edit.css" rel="stylesheet">
<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Edit Doctor Type</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("TypeEdit", "MT", FormMethod.Post, new { @class = "form-horizontal", id = "editForm" }))
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "alert alert-danger", role = "alert" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.TypeName, htmlAttributes: new { @class = "col-form-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TypeName, new
                   {
                       htmlAttributes = new
                       {
                           @class = "form-control",
                           placeholder = "Enter doctor type name",
                           id = "typeNameInput"
                       }
                   })
                        @Html.ValidationMessageFor(model => model.TypeName, "", new { @class = "text-danger" })
                        <small class="form-text text-muted">Enter the name of the doctor type (e.g., Cardiologist, Dentist)</small>
                    </div>
                </div>
                <br/>
                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn btn-primary mr-2">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a href="@Url.Action("TypeIndex")" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<br />
<br />

<script>
    $(document).ready(function () {
        // Initialize form validation
        $("#editForm").validate({
            rules: {
                TypeName: {
                    required: true,
                    minlength: 3,
                    maxlength: 50
                }
            },
            messages: {
                TypeName: {
                    required: "Please enter a doctor type name",
                    minlength: "Type name must be at least 3 characters long",
                    maxlength: "Type name cannot exceed 50 characters"
                }
            },
            errorElement: 'span',
            errorClass: 'text-danger',
            errorPlacement: function (error, element) {
                if (element.parent('.input-group').length) {
                    error.insertAfter(element.parent());
                } else {
                    error.insertAfter(element);
                }
            },
            highlight: function (element, errorClass, validClass) {
                $(element).addClass('is-invalid').removeClass('is-valid');
            },
            unhighlight: function (element, errorClass, validClass) {
                $(element).removeClass('is-invalid').addClass('is-valid');
            },
            submitHandler: function (form) {
                // Show loading state
                $('button[type="submit"]').html('<i class="fas fa-spinner fa-spin"></i> Saving...').prop('disabled', true);

                // Submit the form
                form.submit();
            }
        });

        // Auto-focus on the first input field
        $('#typeNameInput').focus();
    });
</script>
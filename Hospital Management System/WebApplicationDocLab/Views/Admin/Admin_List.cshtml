@model IEnumerable<WebApplicationDocLab.Models.User_Info>

@{
    ViewBag.Title = "Admin_List";
    Layout = "~/Views/_LayoutPageAdminIndex.cshtml";
}
<link href="~/Page/css/Admin_List.css" rel="stylesheet">

<br />
<br />
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="mb-0">Admin List</h2>
        </div>
        <div class="col-md-4 text-right">
            <input type="text" id="searchInput" class="form-control" placeholder="Search by name, email, phone..." />
        </div>
    </div>

    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="patientTable">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                            <th>@Html.DisplayNameFor(model => model.Address)</th>
                            <th>@Html.DisplayNameFor(model => model.Gender)</th>
                            <th>@Html.DisplayNameFor(model => model.Phone)</th>
                            <th>@Html.DisplayNameFor(model => model.BloodGroup)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Status)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            var updateModalId = $"updateModal_{item.Id}";
                            var detailsModalId = $"detailsModal_{item.Id}";
                            var statusClass = item.Status == "Active" ? "badge-success" : "badge-secondary";
                            var statusText = item.Status;

                            <tr>
                                <td>@item.FirstName @item.LastName</td>
                                <td>@item.DateOfBirth.ToString("dd/MM/yyyy")</td>
                                <td>@item.Address</td>
                                <td>@item.Gender</td>
                                <td>@item.Phone</td>
                                <td>@item.BloodGroup</td>
                                <td>@item.Email</td>
                                <td>
                                    <span class="badge @statusClass">@item.Status</span>
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#@updateModalId">Status</button>
                                        <button type="button" class="btn btn-info" data-toggle="modal" data-target="#@detailsModalId">Details</button>
                                    </div>
                                </td>
                            </tr>

                           
                            <div class="modal fade" id="@updateModalId" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel_@item.Id">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Update Patient Status</h5>
                                            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        @using (Html.BeginForm("UpdateAdminStatus", "Admin", FormMethod.Post))
                                        {
                                            <div class="modal-body">
                                                <input type="hidden" name="adminId" value="@item.Id" />
                                                <div class="form-group">
                                                    <p><span class="detail-label">Name:</span> @item.FirstName @item.LastName</p>
                                                </div>
                                                <div class="form-group">
                                                    <p><span class="detail-label">Current Status:</span> <span class="badge @statusClass">@statusText</span></p>
                                                </div>
                                                <div class="form-group">
                                                    <label class="detail-label">New Status</label>
                                                    <select name="Status" class="form-control" required>
                                                        <option value="Active" @(item.Status == "Active" ? "selected" : "")>Active</option>
                                                        <option value="Inactive" @(item.Status == "Inactive" ? "selected" : "")>Inactive</option>
                                                        <option value="Delete" @(item.Status == "Delete" ? "selected" : "")>Delete</option>
                                                    </select>
                                                </div>
                                                <input type="hidden" name="created" value="@Session["UserEmail"]" />
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                                    <i class="fas fa-times"></i> Cancel
                                                </button>
                                                <button type="submit" class="btn btn-primary">
                                                    <i class="fas fa-save"></i> Save Changes
                                                </button>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                           
                            <div class="modal fade" id="@detailsModalId" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel_@item.Id">
                                <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Patient Details</h5>
                                            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="row">
                                                <div class="col-md-4 text-center">
                                                    <img src="@Url.Content("~/image/patientImage/" + item.Image)" class="img-fluid rounded-circle mb-3" style="max-height: 200px;" alt="@item.FirstName @item.LastName" />
                                                    <h4>@item.FirstName @item.LastName</h4>
                                                    <span class="badge @statusClass">@statusText</span>
                                                </div>
                                                <div class="col-md-8">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <p><span class="detail-label">Email:</span> @item.Email</p>
                                                            <p><span class="detail-label">Phone:</span> @item.Phone</p>
                                                            <p><span class="detail-label">Gender:</span> @item.Gender</p>
                                                            <p><span class="detail-label">Blood Group:</span> @item.BloodGroup</p>
                                                            <p><span class="detail-label">Date of Birth:</span> @item.DateOfBirth.ToString("dd/MM/yyyy")</p>
                                                        </div>
                                                        <div class="col-md-6">
                                                                <p><span class="detail-label">Registration No:</span> @item.RegistrationNo</p>
                                                                <p><span class="detail-label">NID Number:</span> @item.NID</p>
                                                                <p><span class="detail-label">Department:</span> @item.Department</p>
                                                                <p><span class="detail-label">Specialty:</span> @item.DoctorType</p>
                                                            </div>
                                                    </div>
                                                    <hr>
                                                    <p><span class="detail-label">Address:</span> @item.Address</p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                                <i class="fas fa-times"></i> Close
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const searchInput = document.getElementById('searchInput');
        searchInput.addEventListener('keyup', function () {
            const filter = this.value.toLowerCase();
            const rows = document.querySelectorAll('#patientTable tbody tr');
            rows.forEach(function (row) {
                const cells = row.querySelectorAll('td');
                let found = false;
                for (let i = 0; i < cells.length - 1; i++) {
                    if (cells[i].textContent.toLowerCase().includes(filter)) {
                        found = true;
                        break;
                    }
                }
                row.style.display = found ? '' : 'none';
            });
        });
    });
</script>

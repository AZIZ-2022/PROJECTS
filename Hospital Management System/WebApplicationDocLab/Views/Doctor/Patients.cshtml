@model IEnumerable<WebApplicationDocLab.Models.User_Info>
@{
    ViewBag.Title = "Patients";
    Layout = "~/Views/_LayoutPageDoctor.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-0"><i class="fas fa-user-injured me-2"></i>Patients</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th>Patient</th>
                                    <th>Contact</th>
                                    <th>Last Visit</th>
                                    <th>Blood Group</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var patient in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@Url.Content("~/Content/PatientImages/" + patient.Image)"
                                                     class="rounded-circle me-2" width="30" height="30">
                                                @patient.FirstName @patient.LastName
                                            </div>
                                        </td>
                                        <td>
                                            <div>@patient.Phone</div>
                                            <small class="text-muted">@patient.Email</small>
                                        </td>
                                        <td>
                                            @{
                                                var lastVisit = ViewBag.LastVisits[patient.Id] as DateTime?;
                                                @(lastVisit?.ToString("MMM dd, yyyy") ?? "Never")
                                            }
                                        </td>
                                        <td>@patient.BloodGroup</td>
                                        <td>
                                            <a href="@Url.Action("PatientDetails", new { id = patient.Id })"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
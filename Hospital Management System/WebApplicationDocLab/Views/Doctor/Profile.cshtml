@model WebApplicationDocLab.Models.User_Info
   @using WebApplicationDocLab.Models

@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/_LayoutPageDoctor.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb" class="bg-light rounded-3 p-2 d-inline-block">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">My Profile</li>
                </ol>
            </nav>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <img src="@Url.Content("~/image/DoctorImage/" + Model.Image)" class="rounded-circle mb-3" width="200" height="200" />
                    <h4>Dr. @Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.DocType</p>

                    <div class="text-start">
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Phone:</strong> @Model.Phone</p>
                        <p><strong>Registration No:</strong> @Model.RegistrationNo</p>
                        <p><strong>Department:</strong> @Model.Department</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#personalInfo">Personal Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#schedule">Schedule</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#changePassword">Change Password</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="personalInfo">
                            @using (Html.BeginForm("Profile", "Doctor", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(model => model.Id)
                                @Html.HiddenFor(model => model.Title)
                                @Html.HiddenFor(model => model.Gender)
                                @Html.HiddenFor(model => model.Password)
                                @Html.HiddenFor(model => model.ConfirmPassword)
                                @Html.HiddenFor(model => model.BloodGroup)
                                @Html.HiddenFor(model => model.DateOfBirth)
                                @Html.HiddenFor(model => model.Address)
                                @Html.HiddenFor(model => model.NID)
                                @Html.HiddenFor(model => model.RegistrationNo)
                                @Html.HiddenFor(model => model.UserType)
                                @Html.HiddenFor(model => model.Status)
                                @Html.HiddenFor(model => model.CreatedDate)
                                @Html.HiddenFor(model => model.createdBy)

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.FirstName)
                                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.LastName)
                                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Email)
                                            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email" })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Phone)
                                            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.Department)
                                            @Html.TextBoxFor(model => model.Department, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            @Html.LabelFor(model => model.DocType)
                                            @Html.DropDownListFor(model => model.DocType, (SelectList)ViewBag.DoctorTypes, "Select Doctor Type", new { @class = "form-control" })
                                            @Html.ValidationMessageFor(model => model.DocType, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Profile Image</label>
                                    <input type="file" name="imageFile" class="form-control" accept="image/*" />
                                    <small class="text-muted">Leave empty to keep current image</small>
                                    @Html.HiddenFor(model => model.Image)
                                </div>

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary">Update Profile</button>
                                </div>
                            }
                        </div>

                        <div class="tab-pane fade" id="schedule">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0">Working Schedule</h5>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#addScheduleModal">
                                    <i class="fas fa-plus"></i> Add Schedule
                                </button>
                            </div>

                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Day</th>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>Consulting Fees</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (ViewBag.DoctorSchedules != null)
                                        {
                                            foreach (var schedule in ViewBag.DoctorSchedules)
                                            {
                                                <tr>
                                                    <td>@schedule.Day</td>
                                                    <td>@schedule.TimeStart</td>
                                                    <td>@schedule.TimeEnd</td>
                                                    <td>@schedule.ConsultingFees.ToString("C")</td>
                                                    <td>
                                                        @using (Html.BeginForm("DeleteSchedule", "Doctor", new { id = schedule.Id }, FormMethod.Post, new { @class = "d-inline" }))
                                                        {
                                                            @Html.AntiForgeryToken()
                                                            <button type="submit" class="btn btn-sm btn-outline-danger"
                                                                    onclick="return confirm('Are you sure you want to delete this schedule?')">
                                                                <i class="fas fa-trash"></i>
                                                            </button>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="5" class="text-center">No schedules found</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="changePassword">
                            @using (Html.BeginForm("ChangePassword", "Doctor", FormMethod.Post))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("id", Model.Id)

                                <div class="mb-3">
                                    <label class="form-label">Current Password</label>
                                    <input type="password" name="currentPassword" class="form-control" required />
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">New Password</label>
                                    <input type="password" name="newPassword" class="form-control" required minlength="6" />
                                    <small class="text-muted">Must be at least 6 characters</small>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label">Confirm New Password</label>
                                    <input type="password" name="confirmPassword" class="form-control" required minlength="6" />
                                </div>

                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-primary">Change Password</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Schedule Modal -->
<div class="modal fade" id="addScheduleModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add Schedule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            @using (Html.BeginForm("AddSchedule", "Doctor", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    @Html.Hidden("DoctorId", Model.Id)

               

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Start Time</label>
                            <input type="time" name="TimeStart" class="form-control" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Time</label>
                            <input type="time" name="TimeEnd" class="form-control" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Consulting Fees</label>
                        <input type="number" name="ConsultingFees" class="form-control" required min="0" step="0.01" />
                        <small class="text-muted">These values will be saved in the DoctorDetails table.</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Schedule</button>
                </div>
            }
        </div>
    </div>
</div>
@model WebApplicationDocLab.Models.Test

@{
    ViewBag.Title = "Delete Test";
    Layout = "~/Views/_LayoutPageAdminIndex.cshtml";
}
<link href="~/Page/css/MT_Delete.css" rel="stylesheet">

<div class="delete-container">
    <div class="delete-header">
        <h2><i class="fas fa-trash-alt"></i> Delete Test</h2>
        <div class="alert alert-warning" role="alert">
            <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this test? This action cannot be undone.
        </div>
    </div>

    <div class="delete-details card">
        <div class="card-header">
            <h4>Test Details</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TestName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TestName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Category)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Category)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Created_at)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Created_at)
                </dd>
            </dl>
        </div>
    </div>

    @using (Html.BeginForm("DeleteConfirmed", "MT", FormMethod.Post, new { id = "deleteForm" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

        <div class="form-actions">
            <button type="submit" class="btn btn-danger delete-btn">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
            <a href="@Url.Action("Index")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    }
</div>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />
    <script>
        $(document).ready(function () {
            // Confirm before delete
            $('#deleteForm').submit(function (e) {
                e.preventDefault();

                Swal.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonColor: '#3085d6',
                    confirmButtonText: 'Yes, delete it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        this.submit();
                    }
                });
            });

            // Handle form submission result
            @if (TempData["DeleteSuccess"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Deleted!',
                    text: '@TempData["DeleteSuccess"]',
                    icon: 'success',
                    confirmButtonText: 'OK'
                }).then(() => {
                    window.location.href = '@Url.Action("Index")';
                });
                </text>
            }

            @if (TempData["DeleteError"] != null)
            {
                <text>
                Swal.fire({
                    title: 'Error!',
                    text: '@TempData["DeleteError"]',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
                </text>
            }
        });
    </script>

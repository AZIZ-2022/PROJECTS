@model IEnumerable<WebApplicationDocLab.Models.BookingAppointment>

@{
    ViewBag.Title = "My Appointments";
    Layout = "~/Views/_LayoutPagePatient.cshtml";
}

<div class="container">
    <h2>My Appointments</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead class="thead-dark">
                <tr>
                    <th>Appointment Date</th>
                    <th>Time Slot</th>
                    <th>Doctor</th>
                    <th>Serial No.</th>
                    <th>Type</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>@appointment.Booking_Date.ToString("dd MMM yyyy")</td>
                        <td>@appointment.ActualTime.ToString(@"hh\:mm") - @appointment.ActualTime.Add(TimeSpan.FromMinutes(20)).ToString(@"hh\:mm")</td>
                        <td>
                            @if (appointment.User_Info != null)
                            {
                                @($"{appointment.User_Info.Title} {appointment.User_Info.FirstName} {appointment.User_Info.LastName}")
                            }
                        </td>
                        <td>@appointment.SerialNumber</td>
                        <td>@appointment.BookType</td>
                        <td>
                            <div class="btn-group" role="group">
                                
                                @using (Html.BeginForm("CancelAppointment", "Patient", new { id = appointment.Id }, FormMethod.Post, new { onsubmit = "return confirm('Are you sure you want to cancel this appointment?');" }))
                                {
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-sm">Cancel</button>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Book New Appointment", "AddAppointment", null, new { @class = "btn btn-success" })
    </div>
</div>